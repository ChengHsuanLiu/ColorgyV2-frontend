<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Colorgy V2" %></title>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag  "application" %>
  </head>

  <body>
    <div class="black-mask"></div>
    <%= partial "views/partials/navbar" %>
    <div class="wrapper">
      <%= yield %>
    </div>
    <%= javascript_include_tag  "main" %>
    <script>
      function responsiveTableHeightFix(){
        var windowWidth = window.innerWidth;
        if( windowWidth < 992 ){
          $('.responsive-table tbody tr:nth-child(1)').each(function(){
            var tdCounter = $(this).children('td').length;
            var tdHeight = $(this).children('td').outerHeight();
            for (var i = 1 ; i >= tdCounter ; i++) {
              $(this).parent().siblings('thead').children('th:nth-child('+ i +')').css({
                height: tdHeight + 'px'
              })
            };
          })
        }
        else{
          retrun;
        }
      }
    </script>
  </body>
</html>
